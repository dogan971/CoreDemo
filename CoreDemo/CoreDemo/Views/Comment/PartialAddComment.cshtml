<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
        <form asp-action="PartialAddComment" asp-controller="Comment" method="POST">
            <input class="form-control" type="text" name="commentUserName" placeholder="Name" required="">
            <input class="form-control" type="text" name="commentTitle" placeholder="Title" required="">
            <textarea class="form-control" name="commentContent" placeholder="Message..." required=""></textarea>
            <button type="submit" id="btn1" class="btn btn-primary submit">Submit</button>
        </form>
    </div>
</div>


