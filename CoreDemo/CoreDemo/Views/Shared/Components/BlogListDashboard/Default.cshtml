@model List<EntityLayer.Concreate.Blog>
@{
    Layout = null;
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var x in Model)
            {
                            <tr>
                                <td>
                                    <img src="~/writer/assets/images/faces/face1.jpg" class="mr-2" alt="image"> David Grey
                                </td>
                                <td>@x.blogTitle</td>
                                 <td>
                                 <label class="badge badge-gradient-success">@x.category.categoryName </label>
                                </td>
                                 <td>@(((DateTime)x.blogCreateDate).ToString("ddd-MMM-yyy"))</td>
                            <td>

                                <a href="/Blog/BlogDetails/@x.blogID" class="btn-sm btn-dark">Detaylar </a>
                            </td>
                            </tr>
                          
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>