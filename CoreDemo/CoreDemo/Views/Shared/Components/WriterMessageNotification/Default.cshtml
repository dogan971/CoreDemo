@using EntityLayer.Concreate
@model List<Message2>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        TimeSpan zaman = DateTime.Now - item.MessageDateTime;
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="@item.Sender.writerImage" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Sender.writerName sana 1 mesaj gönderdi.</h6>
                @{
                    DateTime end = (DateTime)item.MessageDateTime;
                    DateTime now = DateTime.Now;
                    TimeSpan diff = end.Subtract(now);
                }
                @if (diff.Days != 0 && diff.Hours != 0 && diff.Minutes != 0)
                {
                    <p class="text-gray mb-0">
                        @diff.ToString(@"dd") gün
                        @diff.ToString(@"hh") saat
                        @diff.ToString(@"mm") dakika önce gönderildi.
                    </p>
                }
                else if (diff.Days == 0 && diff.Hours != 0 && diff.Minutes != 0)
                {
                    <p class="text-gray mb-0">
                        @diff.ToString(@"hh") saat
                        @diff.ToString(@"mm") dakika önce gönderildi.
                    </p>
                }
            </div>
        </a>
    }

    
    <h6 class="p-3 mb-0 text-center">3 Yeni Mesaj</h6>
</div>