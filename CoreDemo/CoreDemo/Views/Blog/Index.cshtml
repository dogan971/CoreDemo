@model List<EntityLayer.Concreate.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Userlayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var x in Model)
                    {
                    <div class="col-lg-4 card">
                        <a href="single.html">
                            <img src="@x.blogImage" class="card-img-top img-fluid" alt="">
                        </a>
                        <div class="card-body">
                            <ul class="blog-icons my-4">
                                <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt"></i> @(((DateTime)x.blogCreateDate).ToString("ddd-MMM-yyyy"))
                                    </a>
                                </li>
                                <li class="mx-2">
                                    <a href="#">
                                        <i class="far fa-comment"></i> 21
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fas fa-eye"></i>  @x.category.categoryName
                                    </a>
                                </li>

                            </ul>
                            <h5 class="card-title">
                                <a href="single.html"> @x.blogTitle</a>
                            </h5>
                            <p class="card-text mb-3">
                                @if (@x.blogContent != null && @x.blogContent.Length > 130)
                                {
                                    @x.blogContent.Substring(0,@x.blogContent.Substring(0, 130).LastIndexOf(" "))
                                }
                                else
                                {
                                    @x.blogContent
                                }

                            </p>
                            <a href="/Blog/BlogDetails/@x.blogID/" class="btn btn-primary read-m">Read More</a>
                        </div>
                    </div>
                    
                
                    }
            </div>
        </div>
    </div>
        </div>
</section>